<div class="container">
    <div class="row">
        <div class="">
            <div class="card magenta z-depth-5">
                <div class="card-content white-text">
                    <span class="card-title center-align"><span class="cardStyle">{{post.post_title}}</span></span>
                    <p>{{post.post_body}}</p>
                </div>
                <div class="card-action">
                    {{#eq userId post.user.id}}
                    <a class="btn waves-effect edit-post sunsetorange black-text" id="postEdit{{id}}" data-id="{{id}}">Edit</a>
                    <a class="btn waves-effect delete-post sunsetorange black-text" id="postDelete{{id}}"
                        data-id="{{id}}">Delete</a>
                    {{/eq}}
                    {{#if loggedIn}}
                        <a data-target="modal1" class="btn modal-trigger sunsetorange pulse waves-effect black-text">Add
                            Comment</a>
                    {{/if}}
                    <a href="/" class="hide-on-med-and-down right sunsetorange-text"><span class="userStyle">{{post.user.username}}</span>
                        {{post.creation_date}}</a>
                    <br class="hide-on-large-only">
                    <br class="hide-on-large-only">
                    <a href="/" class="hide-on-large-only leftsunsetorange-text"><span class="userStyle">{{post.user.username}}</span>
                        {{post.creation_date}}</a>
                    <br class="hide-on-large-only">
                </div>
            </div>
        </div>
    </div>

    <div class="divider"></div>

    <div id="modal1" class="modal magenta">
        <div class="modal-content">
            <h4 class="white-text">Creating New Comment...</h4>
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="commentBody" class="materialize-textarea white-text"></textarea>
                            <label for="commentBody">Comment Body</label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <a href="/post/{{post.id}}" class="btn-flat magneta modal-close waves-effect waves-green white-text right"
            id="submitComment">Add
            Comment</a>
    </div>

    {{#each comment}}
    {{> commentCard poster=../post/user sesId=../userId}}
    {{/each}}

</div>

<script src="/js/post.js"></script>
<script src="/js/comment.js"></script>