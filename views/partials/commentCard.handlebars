<div class="row">
    <div class="">
        <div class="card sunsetorange z-depth-3">
            <div class="card-content white-text">
                <p class="black-text">{{comment_body}}</p>
            </div>
            <div class="card-action">
                {{#eq sesId user.id}}
                <a data-target="modalc{{id}}" class="btn waves-effect modal-trigger magenta" id="edit{{id}}">Edit</a>
                <a class="btn waves-effect delete-comment magenta" id="deleteComment{{id}}" data-id="{{id}}">Delete</a>
                <a href="/dashboard/{{user.id}}" class="hide-on-med-and-down right magenta-text"><span class="userStyle">{{user.username}}</span> <span class="dateStyle">{{creation_date}}</span></a>
                {{else}}
                <a href="/dashboard/{{user.id}}" class="magenta-text"><span class="userStyle">{{user.username}}</span> <span class="dateStyle">{{creation_date}}</span></a>
                {{/eq}}
            </div>
        </div>
    </div>
</div>

<div id="modalc{{id}}" class="modal">
    <div class="modal-content">
        <h4>Editing Comment...</h4>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="commentBodyEdit{{id}}" class="materialize-textarea"></textarea>
                        <label for="commentBodyEdit{{id}}">Post Body</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <a href="/dashboard" class="modal-close waves-effect waves-green btn-flat edit-comment" id="commentEdit"
            data-id="{{id}}">Update</a>
    </div>
</div>