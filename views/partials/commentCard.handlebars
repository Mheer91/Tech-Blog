<div class="row">
    <div class="">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <p>{{comment_body}}</p>
            </div>
            <div class="card-action">
                {{#eq sesId user.id}}
                <a data-target="modalc{{id}}" class="btn waves-effect modal-trigger" id="edit{{id}}">Edit</a>
                <a class="btn waves-effect delete-comment" id="deleteComment{{id}}" data-id="{{id}}">Delete</a>
                <a href="/" class="right"><span class="userStyle">{{user.username}}</span> {{creation_date}}</a>
                {{else}}
                <a href="/" class=""><span class="userStyle">{{user.username}}</span> {{creation_date}}</a>
                {{/eq}}
            </div>
        </div>
    </div>
</div>
<div class="divider"></div>

<div id="modalc{{id}}" class="modal">
    <div class="modal-content">
        <h4>Editing Comment...</h4>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="commentBodyEdit{{id}}" class="materialize-textarea"></textarea>
                        <label for="commentBodyEdit{{id}}">Post Body</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <a href="/dashboard" class="modal-close waves-effect waves-green btn-flat edit-comment" id="commentEdit"
            data-id="{{id}}">Update</a>
    </div>
</div>