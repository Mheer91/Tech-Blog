<div class="row">
    <div class="">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><span class="cardStyle">{{post_title}}</span></span>
          <p>{{post_body}}</p>
        </div>
        <div class="card-action">
          <a class="btn" href="/post/{{id}}">Comments</a>
          {{#eq sesId user.id}}
          <a class="btn waves-effect edit-post" id="postEdit{{id}}" data-id="{{id}}">Edit</a>
          <a class="btn waves-effect delete-post" id="postDelete{{id}}" data-id="{{id}}">Delete</a>    
          {{/eq}}
          <a href="/" class="right hide-on-med-and-down"><span class="userStyle">{{user.username}}</span> on {{creation_date}}</a>
        </div>
      </div>
    </div>
</div>