<div class="row">
    <div class="">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title"><span class="cardStyle">{{post_title}}</span></span>
                <p>{{post_body}}</p>
            </div>
            <div class="card-action">
                <a class="btn" href="/post/{{id}}">View Post</a>
                {{#eq sesId user.id}}
                <a data-target="modal{{id}}" class="btn waves-effect modal-trigger" id="postEdit{{id}}">Edit</a>
                <a class="btn waves-effect delete-post" id="postDelete{{id}}" data-id="{{id}}">Delete</a>
                {{/eq}}
                <a href="/" class="right hide-on-med-and-down"><span class="userStyle">{{user.username}}</span> on
                    {{creation_date}}</a>
            </div>
        </div>
    </div>
</div>

<div id="modal{{id}}" class="modal">
    <div class="modal-content">
        <h4>Editing "{{post_title}}"</h4>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="postTitleEdit{{id}}" class="materialize-textarea"></textarea>
                        <label for="postTitleEdit">Post Title</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="postBodyEdit{{id}}" class="materialize-textarea"></textarea>
                        <label for="postBodyEdit">Post Body</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <a href="/dashboard" class="modal-close waves-effect waves-green btn-flat edit-post" id="postEdit"
            data-id="{{id}}">Update</a>
    </div>
</div>