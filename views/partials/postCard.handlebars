<div class="row">
    <div class="">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><span class="cardStyle">{{post_title}}</span></span>
          <p>{{post_body}}</p>
        </div>
        <div class="card-action">
          <a href="/post/{{id}}">Comments</a>
          <a href="/" class="right hide-on-med-and-down"><span class="userStyle">{{user.username}}</span> on {{creation_date}}</a>
        </div>
      </div>
    </div>
</div>